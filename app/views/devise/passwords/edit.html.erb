<h2><%= t("devise.passwords.change_password_heading") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t("devise.passwords.new_password_label") %><br />
    <% if @minimum_password_length %>
      <em>(<%= t("devise.passwords.minimum_characters", count: @minimum_password_length) %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("devise.passwords.confirm_new_password_label") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.passwords.change_password_button") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
