<div class="comments-container">
  <%= form_with(model: [commentable, commentable.comments.build], url: comments_create_comment_path, local: true) do |form| %>
    <div>
      <%= form.label :content, style: "display: block" %>
      <%= form.text_field :content %>
    </div>

    <div>
      <%= form.submit "保存する" %>
    </div>
  <% end %>
</div>
