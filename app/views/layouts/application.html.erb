<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if user_signed_in? %>
      <nav>
        <ul>
          <li><%= link_to t('nav.books'), books_path %></li>
          <li><%= link_to t('nav.users'), users_path %></li>
          <li><%= link_to t('nav.my_page'), edit_user_registration_path %></li>
          <li><%= link_to t('nav.logout'), destroy_user_session_path, data: { turbo_method: :delete } %></li>
        </ul>
      </nav>
    <% end %>

    <p class="notice" style="color: green"><%= notice %></p>
    <p class="alert" style="color: red"><%= alert %></p>

    <%= yield %>
  </body>
</html>
